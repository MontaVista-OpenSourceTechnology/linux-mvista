/dts-v1/;

#include "bcm-katana2.dtsi"

/ {
	model = "ML66 NPU1002";
	compatible = "ericsson,npu1002", "brcm,katana2";

	aliases {
		serial0 = &uart0;
		serial1 = &uart1;
		ethernet0 = &gmac0;
		ethernet1 = &gmac1;
		sdk-serdes-lane2 = &amac_serdes2;
	};

	chosen {
		bootargs = "ttyS1,115200n8 maxcpus=2 root=ubi0_0 ro rootfstype=ubifs user_debug=31 ubi.mtd=pbist_fs";
	};
};

&uart0 {
	status = "okay";
};

&uart1 {
	status = "okay";
	clock-frequency = <123750000>;
};

&gmac0 {
	status = "okay";
	phy-handle = <&amac_phy0>;
	phy-mode = "sgmii"; /* "gmii-id", "gmii-rxid", "sgmii" */
	serdes-handle = <&amac_serdes0>;
};

&gmac1 {
	status = "okay";
	serdes-handle = <&amac_serdes1>;
};

&gpio_cca {
	status = "okay";
};

&i2c0 {
	status = "okay";
};

&i2c1 {
	status = "okay";
};

&nand {
	status = "okay";
	nandcs@1 {
		compatible = "brcm,nandcs";
		reg = <0>;
		nand-on-flash-bbt;
		/*nand-bus-width = <8>;*/
		nand-ecc-strength = <4>;
		nand-ecc-step-size = <512>;
		brcm,nand-oob-sector-size = <16>;
		#address-cells = <1>;
		#size-cells = <1>;

		partition@0 {
			label = "nboot";
			reg = <0x0 0x100000>;
			/*read-only;*/
		};
		partition@1 {
			label = "memtest";
			reg = <0x100000 0x100000>;
			/*read-only;*/
		};
		partition@2 {
			label = "nenv";
			reg = <0x200000 0x100000>;
		};
		partition@3 {
			label = "nerd_env";
			reg = <0x300000 0x100000>;
		};
		partition@4 {
			label = "iproc_ram_tuning";
			reg = <0x400000 0x100000>;
		};
		partition@5 {
			label = "nandtest";
			reg = <0x500000 0x100000>;
		};
		partition@6 {
			label = "pbist_linux";
			reg = <0x600000 0x600000>;
		};
		partition@7 {
			label = "pbist_fs";
			reg = <0xc00000 0x4a00000>;
		};
		partition@8 {
			label = "scratch";
			reg = <0x5600000 0x1AA00000>;
		};
	};
};

&qspi {
	status = "okay";
};

&mdio_int {
	status = "okay";
	/* 3 AMAC serdes, amac_serdes2 is for switch front port */
	amac_serdes0: amac_serdes@0 {
		reg = <1>;
	};
	amac_serdes1: amac_serdes@1 {
		reg = <2>;
	};
	amac_serdes2: amac_serdes@2 {
		reg = <3>;
	};
	pcie_phy0: pcie_phy@0 {
		reg = <7>;
	};
	pcie_phy1: pcie_phy@1 {
		reg = <8>;
	};
};

&mdio_ext {
	status = "okay";
	amac_phy0: amac_phy@0 {
		reg = <5>;
	};
};

&hwrng {
	status = "okay";
};

&iproc_wdt {
	status = "okay";
};

&dmac0 {
	status = "okay";
};

&iproc_cmicd {
	status = "okay";
};
