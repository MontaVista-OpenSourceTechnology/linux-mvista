#include "imx8qm-var-spear-sp8customboard.dtsi"

&hdmi {
	compatible = "cdn,imx8qm-dp";
	firmware-name = "dpfw.bin";
	lane-mapping = <0x1b>;
	status = "okay";
};

&hdmi_lpcg_apb {
	status = "okay";
};

&hdmi_lpcg_apb_mux_csr {
	status = "okay";
};

&hdmi_lpcg_apb_mux_ctrl {
	status = "okay";
};

&hdmi_lpcg_gpio_ipg {
	status = "okay";
};

&hdmi_lpcg_i2c0 {
	status = "okay";
};

&hdmi_lpcg_i2s {
	status = "okay";
};

&hdmi_lpcg_lis_ipg {
	status = "okay";
};

&hdmi_lpcg_msi_hclk {
	status = "okay";
};

&hdmi_lpcg_phy {
	status = "okay";
};

&hdmi_lpcg_pwm_ipg {
	status = "okay";
};

&hdmi_lpcg_pxl {
	status = "okay";
};

&irqsteer_hdmi {
	status = "okay";
};

&ldb1_phy {
	status = "disabled";
};

&ldb1 {
	status = "disabled";
};

&lsio_gpio4 {
        pinctrl-names = "default";
        pinctrl-0 = <&pinctrl_hdmi_i2c>;

        hdmi_i2c_signal_route {
                gpio-hog;
                gpios = <27 GPIO_ACTIVE_HIGH>;
                output-low;
                line-name = "hdmi_i2c";
        };
};
