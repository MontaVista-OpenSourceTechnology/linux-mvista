config ARCH_KEYSTONE
	bool "Texas Instruments Keystone Devices"
	depends on ARCH_MULTI_V7
	select ARM_GIC
	select HAVE_ARM_ARCH_TIMER
	select KEYSTONE_TIMER
	select ARCH_HAS_RESET_CONTROLLER
	select ARM_ERRATA_798181 if SMP
	select COMMON_CLK_KEYSTONE
	select ARCH_SUPPORTS_BIG_ENDIAN
	select ZONE_DMA if ARM_LPAE
	select PINCTRL
	select PM_GENERIC_DOMAINS if PM
	select MIGHT_HAVE_PCI
	select PCI_DOMAINS if PCI
	select TI_KEYSTONE
	select ARCH_REQUIRE_GPIOLIB
	select HAS_RAPIDIO
	help
	Support for boards based on the Texas Instruments Keystone family of
	SoCs.

if ARCH_KEYSTONE
	config TI_KEYSTONE
	bool

choice
	prompt "TI Keystone based board selection"
	default TI_K2EVM

config TI_K2EVM
	bool "TI Keystone Evaluation Module"
	help
	Select this to build a kernel for any TI Keystone Evaluation Board

config FSM4_K2
	bool "NOKIA FSM4 Keystone based board"
	select OF_DYNAMIC
	select REGMAP
	select REGMAP_I2C
	help
	Select this to build a kernel for FSM4 project TI Keystone SoC

endchoice
endif
