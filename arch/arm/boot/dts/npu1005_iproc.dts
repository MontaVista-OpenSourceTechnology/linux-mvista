/dts-v1/;

#include "bcm-katana2.dtsi"

/ {
	model = "ML66 NPU1005";
	compatible = "ericsson,npu1005", "brcm,katana2";

	aliases {
		serial0 = &uart0;
		serial1 = &uart1;
		ethernet0 = &gmac0;
		ethernet1 = &gmac1;
		sdk-serdes-lane2 = &amac_serdes2;
	};

	chosen {
		bootargs = "console=ttyS1,115200n8 maxcpus=2 ubi.mtd=1 root=ubi0:rootfs rootflags=bulk_read rootfstype=ubifs user_debug=31 earlyprintk";
	};
};

&uart0 {
	status = "okay";
};

&uart1 {
	status = "okay";
	clock-frequency = <123750000>;
};

&gmac0 {
	status = "okay";
	phy-handle = <&amac_phy0>;
	phy-mode = "sgmii"; /* "gmii-id", "gmii-rxid", "sgmii" */
	serdes-handle = <&amac_serdes0>;
};

&gmac1 {
	status = "okay";
	serdes-handle = <&amac_serdes1>;
};

&usbphy0 {
	status = "okay";
	mdio-phy-handle = <&usb_phy>;
};

&ehci0 {
	status = "disabled";
};

&usbd {
	status = "okay";
};

&gpio_cca {
	status = "okay";
};

&pcie0 {
	status = "okay";
	mdio-phy-handle = <&pcie_phy0>;
};

&pcie1 {
	status = "okay";
	mdio-phy-handle = <&pcie_phy1>;
};

&i2c0 {
	status = "okay";
};

&i2c1 {
	status = "okay";
};

&nand {
	status = "okay";
	nandcs@1 {
		compatible = "brcm,nandcs";
		reg = <0>;
		nand-on-flash-bbt;
		/*nand-bus-width = <8>;*/
		nand-ecc-strength = <4>;
		nand-ecc-step-size = <512>;
		brcm,nand-oob-sector-size = <16>;
		#address-cells = <1>;
		#size-cells = <1>;

		partition@0 {
			label = "boot";
			reg = <0x0 0x100000>;
		};
		partition@1 {
			label = "memtest";
			reg = <0x100000 0x100000>;
		};
		partition@2 {
			label = "bootenv";
			reg = <0x200000 0x200000>;
		};
		partition@3 {
			label = "iproc_ram_tuning";
			reg = <0x400000 0x100000>;
		};
		partition@4 {
			label = "nandtest";
			reg = <0x500000 0x100000>;
		};
		partition@5 {
			label = "pbist";
			reg = <0x600000 0x3A00000>;
		};
		partition@6 {
			label = "lm0";
			reg = <0x04000000 0x10000000>;
		};
		partition@7 {
			label = "lm1";
			reg = <0x14000000 0x10000000>;
		};
		partition@8 {
			label = "util";
			reg = <0x24000000 0x58000000>;
		};
		partition@9 {
			label = "crash";
			reg = <0x7c000000 0x4000000>;
		};

		partitions {
			compatible = "ml66,npu-partitions";
		};
	};
};

&qspi {
	status = "okay";
};

&mdio_int {
	status = "okay";
	/* 3 AMAC serdes, amac_serdes2 is for switch front port */
	amac_serdes0: amac_serdes@0 {
		reg = <1>;
	};
	amac_serdes1: amac_serdes@1 {
		reg = <2>;
	};
	amac_serdes2: amac_serdes@2 {
		reg = <3>;
	};
	usb_phy: usb_phy@0 {
		reg = <6>;
	};
	pcie_phy0: pcie_phy@0 {
		reg = <7>;
	};
	pcie_phy1: pcie_phy@1 {
		reg = <8>;
	};
};

&mdio_ext {
	status = "okay";
	amac_phy0: amac_phy@0 {
		reg = <7>;
	};
};

&hwrng {
	status = "okay";
};

&iproc_wdt {
	status = "okay";
};

&dmac0 {
	status = "okay";
};

&iproc_cmicd {
	status = "okay";
};
